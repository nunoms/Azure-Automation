{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "siteNames": {
      "type": "array"
    },
    "hostingPlanName": {
      "minLength": 1,
      "type": "string"
    },
    "hostingPlanSKU": {
      "defaultValue": "Free",
      "allowedValues": [
        "Free",
        "Shared",
        "Basic",
        "Standard"
      ],
      "type": "string"
    },
    "hostingPlanWorkerSize": {
      "defaultValue": "0",
      "allowedValues": [
        "0",
        "1",
        "2"
      ],
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "name": "[parameters('hostingPlanName')]",
      "apiVersion": "2014-06-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "hostingPlanName"
      },
      "properties": {
        "name": "[parameters('hostingPlanName')]",
        "sku": "[parameters('hostingPlanSKU')]",
        "workerSize": "[parameters('hostingPlanWorkerSize')]",
        "numberOfWorkers": 1
      }
    },
     {
      "apiVersion": "2016-09-01",
      "name": "nestedTemplate0",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "./innerTemplate.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "siteName": {"value": "[parameters('siteNames')[0]]"},
          "serverFarm" : {"value": "[resourceId('Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]" }
        }
      }
    },
    {
      "apiVersion": "2016-09-01",
      "name": "[concat('nestedTemplate', copyIndex(1))]",
      "type": "Microsoft.Resources/deployments",
      "copy": {
        "name": "storagecopy",
        "count": "[sub(length(parameters('siteNames')), 1)]"
      },
      "properties": {
        "mode": "incremental",
        "templateLink": {
          "uri": "./innerTemplate.json",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "siteName": {"value": "[parameters('siteNames')[copyIndex(1)]]"},
          "IPs": {"value": "[reference(concat('nestedTemplate', copyIndex())).outputs.result.value]"},
           "serverFarm" : {"value": "[resourceId('Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]" }
        }
      }
    }
  ]
}
